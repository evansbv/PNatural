<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fnatural"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bo.edu.uagrm.ficct.inf120.pnatural.FNatural">

    <TextView
        android:layout_x="0dp"
        android:layout_y="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clase Natural"
        android:id="@+id/L1"
        tools:textSize="24sp"
        tools:gravity="center" />

    <EditText
        android:layout_x="0dp"
        android:layout_y="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="5"
        android:id="@+id/E1"
        android:hint="Valor..."
        android:inputType="number" />
    <EditText
        android:layout_x="0dp"
        android:layout_y="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:id="@+id/E2"
        android:hint="Posicion..." />

    <ScrollView
        android:layout_x="0dp"
        android:layout_y="120dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:text="Crear"
                android:layout_x="0dp"
                android:layout_y="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/B1"
                android:onClick="eCrear" />

            <Button
                android:text="setValor"
                android:layout_x="0dp"
                android:layout_y="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/B2"
                android:onClick="eSetValor" />

            <Button
                android:text="getValor"
                android:layout_x="0dp"
                android:layout_y="80dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/B3"
                android:onClick="eGetValor" />

            <Button
                android:text="digCant"
                android:layout_x="0dp"
                android:layout_y="120dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/B4"
                android:onClick="eDigCant" />

            <Button
                android:text="digAdd"
                android:layout_x="0dp"
                android:layout_y="160dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/B6"
                android:onClick="eDigAdd" />


            <Button
                android:text="Salir"
                android:layout_x="0dp"
                android:layout_y="240dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/B5"
                android:onClick="eSalir" />

        </AbsoluteLayout>
    </ScrollView>



</AbsoluteLayout>
